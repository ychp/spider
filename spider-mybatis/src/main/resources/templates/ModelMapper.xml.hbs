<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="{{modelName}}">
    <resultMap id="{{modelName}}Map" type="{{modelName}}">
        <id column="{{primaryColumn.javaXmlColumn}}" property="{{primaryColumn.javaColumn}}"/>
        {{#each columns}}<result column="{{javaXmlColumn}}" property="{{javaColumn}}"/>
        {{/each}}
    </resultMap>

    <sql id="tb">
        `{{tableName}}`
    </sql>

    <sql id="cols_all">
        `{{primaryColumn.javaXmlColumn}}`, <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        {{#each columns}}`{{javaXmlColumn}}`{{#unless @last}},{{/unless}} {{/each}}
    </sql>

    <sql id="vals">
        {{#each columns}}{{#if needEquals}} #{{#formatParam javaColumn}}{{/formatParam}},{{/if}}{{/each}} now(), now()
    </sql>

    <sql id="criteria">
        <where>
            <if test="{{primaryColumn.javaColumn}} != null">AND `{{primaryColumn.javaXmlColumn}}` = #{{#formatParam primaryColumn.javaColumn}}{{/formatParam}}</if>
            {{#each columns}}<if test="{{javaColumn}} != null">AND `{{javaXmlColumn}}` = #{{#formatParam javaColumn}}{{/formatParam}}</if>
            {{/each}}
        </where>
    </sql>

    <sql id="update_criteria">
        <set>
            {{#each columns}}{{#if needEquals}}<if test="{{javaColumn}} != null">`{{javaXmlColumn}}` = #{{#formatParam javaColumn}}{{/formatParam}},</if>
            {{/if}}{{/each}}
            updated_at = now()
        </set>
    </sql>


    <select id="findById" parameterType="long" resultMap="{{modelName}}Map">
        SELECT
            <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE `{{primaryColumn.javaXmlColumn}}` = #{{#formatParam primaryColumn.javaColumn}}{{/formatParam}} LIMIT 1
    </select>

    <select id="list" parameterType="map" resultMap="{{modelName}}Map">
        SELECT
        <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <insert id="create" parameterType="{{modelName}}" keyProperty="{{primaryColumn.javaColumn}}" useGeneratedKeys="true">
        INSERT INTO <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <update id="update" parameterType="{{modelName}}">
        UPDATE
        <include refid="tb"/>
        <include refid="update_criteria"/>
        WHERE `{{primaryColumn.javaXmlColumn}}` = #{{#formatParam primaryColumn.javaColumn}}{{/formatParam}}
    </update>

    <!-- 计数 -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!-- 分页查询 -->
    <select id="paging" parameterType="map" resultMap="{{modelName}}Map">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC LIMIT #{offset}, #{limit}
    </select>

    <delete id="delete" parameterType="long">
        delete from <include refid="tb"/>
        where `{{primaryColumn.javaXmlColumn}}` = #{{#formatParam primaryColumn.javaColumn}}{{/formatParam}}
    </delete>
</mapper>